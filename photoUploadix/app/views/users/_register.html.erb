<%= form_for @user, :url => { :action => "create" },:html => {:id=>"registerForm",:onSubmit => "resetErrors();return $(this).validate();", :class =>"form-horizontal"} do |f| %>

<!-- Error handling -->

<% if @user.errors.any? %>
  <div class="messages">
    <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
    <br /><br />
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li class="error">
        <%= msg %>
      </li>
    <% end %>
    </ul>
  </div>
<% end %>

<br /><br />

<fieldset>
    <!-- left column -->
    <div class="floatLeft registrationLeftColumn">
      <!-- first name item -->
      <div class="control-group">
        <%= f.label :first_name,:class =>"control-label required"   %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-user"></i></span>
            <%= f.text_field :first_name,:placeholder=>"First name","data-validation"=>"required",:class=>"input-xlarge" %>
          </div>
        </div>
      </div>
      <!-- last name item -->
      <div class="control-group">
        <%= f.label :last_name,:class =>"control-label required"   %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-user"></i></span>
            <%= f.text_field :last_name,:placeholder=>"Last name","data-validation"=>"required",:class=>"input-xlarge" %>
          </div>
        </div>
      </div>
      <!-- login item -->
      <div class="control-group">
        <%= f.label :login,:class =>"control-label required"   %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-user"></i></span>
            <%= f.text_field :login,:placeholder=>"Login ID","data-validation"=>"required",:class=> "input-xlarge" %>
          </div>
        </div>
      </div>
      <!-- email item -->
      <div class="control-group">
        <%= f.label :email,:class =>"control-label required"  %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-envelope"></i></span>
            <%= f.text_field :email,:placeholder=>"Email","data-validation"=>"required validate_email" %>
          </div>
        </div>
      </div>
    </div>
    <!-- right column -->
    <div class="floatRight registrationRightColumn">
      
      <!-- password  item -->
      <div class="control-group">
        <%= f.label :password,:class =>"control-label required"  %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-briefcase"></i></span>
            <%= f.password_field :password,:placeholder=>"Password","data-validation"=>"required validate_min_length length6 validate_confirmation " %>
            <span class="help-block small">6 characters minimum 40 maximum</span>
          </div>
        </div>
      </div>
      <!-- password confirmation -->
      <div class="control-group">
        <%= f.label :password_confirmation,:class =>"control-label required"  %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-briefcase"></i></span>
            <%= f.password_field :password_confirmation,:placeholder=>"Password confirmation","data-validation" => "required validate_confirmation" %>
            <span class="help-block small">Confirm your password</span>
          </div>
        </div>
      </div>
    </div>
    <div class="clear"></div>
    <br />
    <div class="control-group" >
      <div class="controls" style="text-align:center">
        <%= f.submit "Register",{:id =>"register",:class =>"btn btn-primary" } %>
        <button type="reset" class="btn" value="Reset">Reset</button>
        <span class="help-block small">* Fields are required</span>
      </div>
    </div>


  

</fieldset>
    <% end %>

<script src=" <%= javascript_path('jquery.formvalidator.min.js')  %>" type="text/javascript"></script>

<script>
	$("#loginForm").validateOnBlur();
</script>