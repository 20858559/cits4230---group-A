<%= form_for @photo, :url => { :action => "create" },:html => {:id=>"uploadPhotoForm",:multipart => true,:onSubmit => "return $(this).validate();"} do |f| %>

<!-- Error handling -->


<%= f.error_messages %>

<fieldset>
  <legend>
    <div class="clearfix">
      <%= f.label :description  %>
      <div class="input">
        <%= f.text_field :description,:placeholder=>"Description","data-validation"=>"required" %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :is_it_private?  %>
      <div class="input">
        <%= f.check_box :is_private,{} %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :Select_your_photo  %>
      <div class="input">
        <%= f.file_field :photo %>
      </div>
    </div>


    <%= f.submit "Upload your photo",{:id =>"uploadPhoto" } %>
    <% end %>

  </legend>
</fieldset>