<div class="hero-unit">
  <h1>Welcome to our public gallery!</h1>
  <br /><br />

    <% if !@photos.nil?  %>
      <div id ="user_gallery">
      <% @photos.each do |photo| %>
         <%= link_to image_tag( photo.photo.url(:thumb),"data-description"=>photo.description+" uploaded at latitude:"+photo.latitude.to_s+" longitude:"+photo.longitude.to_s,"data-title"=>photo.photo_file_name,"data-big"=>photo.photo.url ),photo.photo.url(:large) %>


      <%  end %>
        

      </div>
