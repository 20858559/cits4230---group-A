      <div class="social" >
        <ul class="social-menu">
          <li>
              <button class="btn  input-prepend" id="photouploadix_like"  >
                
              </button>
          </li>
          <li>
            <div id="fb-like" ></div>
          </li>
        </ul>
        
      </div>

    <% else %>
