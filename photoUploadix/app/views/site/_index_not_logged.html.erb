<div class="hero-unit">
  <h1>Hello, photo lovers!</h1>
  <p>This is a simple photo uploading website,  making it easy for you to send photos around the world, which is great for keeping in touch with loved ones overseas</p>
  <span>
     <p><%= link_to "Sign Up!", new_user_path,:class => "btn btn-primary btn-large"  %></p>
    <small>if you are new to our website</small>
  </span>
</div>

<% if !@photos.nil? %>

  <!-- displays five randoms pictures -->
  <div id="publicCarousel" class="carousel slide">
    <!-- Carousel items -->
    <div class="carousel-inner">
      <% @photos.each_with_index do |photo,index| %>
        <div class="item">
          <%= image_tag( photo.photo.url(:large)) %>
          <div class="carousel-caption">
            <h4><%= "Photo #{index+1}" %> </h4>
            <p><%= photo.description %> </p>
          </div>
        </div>

      <%  end %>
    </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
  </div>

<% end %>

<div class="row">
  <div class="span4">
    <h2>Find Friends</h2>
    <p> Browse through the users to find your friends.  </p>
    <p><%= link_to "Check out our list of users", users_path,:class => "btn"  %></p>
  </div>
  <div class="span4">
    <h2>Get Started</h2>
    <p>Upload some pictures, and let's get started!</p>
    <p><%= link_to "Register", new_user_path,:class => "btn"  %></p>
 </div>
  <div class="span4">
    <h2>Public Gallery</h2>
    <p>View your gallery.</p>
    <%= link_to "Public gallery", public_gallery_path,:class => "btn"  %>
  </div>
</div>

<br /><br />




<br /><br />

<% if !@photos.nil? %>

  <!-- carousel js -->

  <script>
    
    $('.carousel').carousel({
      interval: 3000
    });
  </script>
<% end %>
